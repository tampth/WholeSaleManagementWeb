@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<WholeSaleManagementApp.Models.Product>
@* model IEnumerable<WholeSalerWeb.Models.Product> *@
@{
    int CurrentPage = ViewBag.CurrentPage;
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="product-area shop-sidebar shop section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-12">
                <div class="shop-sidebar">
                    <!-- Single Widget -->
                    <div class="single-widget category">
                        <h3 class="title">Categories</h3>
                        <div class="d-md-flex">
                            <select required class="custom-select col-md-12" id="txtCatID" name="txtCatID" asp-items="ViewBag.DanhMuc">
                                <option selected>Chọn danh mục</option>
                                <option value="all">All</option>
                            </select>
                        </div>
                    </div>

                </div>
            </div>
            <div class="col-lg-12 col-md-8=12 col-12">
                <div class="row">
                    <div class="col-12">
                        <!-- Shop Top -->
                        <!--/ End Shop Top -->
                    </div>
                </div>
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-2 col-md-6 col-12">
                            <div class="single-product">
                                <div class="product-img">
                                    <a asp-controller="Products" asp-action="Details" asp-route-id="@item.ProductId">
                                        <img class="default-img" src="~/images/products/@item.Thumb" alt="@item.ProductName">
                                        <img class="hover-img" src="~/images/products/@item.Thumb" alt="@item.ProductName">
                                    </a>

                                    @if (item.UnitslnStock == 0)
                                    {
                                        <div class="button-head">
                                            <div class="product-action">
                                                <a data-toggle="modal" data-target="#exampleModal" title="Quick View" href="#"><i class=" ti-eye"></i><span>Quick Shop</span></a>
                                            </div>
                                            <div class="product-action-2">
                                                <a title="Outstockk">Hết hàng</a>
                                            </div>
                                        </div>

                                    }
                                    else
                                    {
                                        <div class="button-head">
                                            <div class="product-action">
                                                <a data-toggle="modal" data-target="#exampleModal" title="Quick View" href="#"><i class=" ti-eye"></i><span>Quick Shop</span></a>
                                            </div>
                                            <div class="product-action-2">
                                                <a asp-action="AddToCart" asp-route-id="@item.ProductId">Thêm vào giỏ hàng</a>
                                            </div>
                                        </div>
                                    }

                                </div>
                                <div class="product-content">
                                    <h3><a asp-controller="Products" asp-action="Details" asp-route-id="@item.ProductId">@item.ProductName</a></h3>
                                    <div class="product-price">
                                        <span>@item.Price?.ToString("#,##0 VND")</span>
                                    </div>
                                </div>

                            </div>
                        </div>
                    }
                </div>

                <div aria-label="Page navigation example">
                    <ul class="pagination">
                        <pager class="jsgrid-pager-current-page" list="@Model" asp-area="" asp-controller="Products" asp-route-CatID="@ViewBag.CurrentCateID" asp-action="Index" />
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script>$(document).ready(function () {
            jQuery("#txtCatID").change(function () {
                var catID = jQuery(this).children(":selected").attr("value");
                catID = parseFloat(catID);
                $('#txtCatID option').removeAttr('selected');
                $("#txtCatID > [value=" + catID + "]").attr("selected", "true");
                $.ajax({
                    url: '/Products/Filter',
                    datatype: "json",
                    type: "GET",
                    data: {
                        CatID: catID
                    },
                    async: true,
                    success: function (results) {
                        if (results.status == "success") {
                            window.location.href = results.redirectUrl;
                        }
                    },
                    error: function (xhr) {
                        alert('error');
                    }
                });
            });

            $("#keyword").keyup(function () {
                var strkeyword = $('#keyword').val();
                $.ajax({
                    url: '/Admin/Search/FindProduct/',
                    datatype: "json",
                    type: "POST",
                    data: { keyword: strkeyword },
                    async: true,
                    success: function (results) {
                        $("#records_table").html("");
                        $("#records_table").html(results);
                    },
                    error: function (xhr) {
                        alert('error');
                    }
                });
            });
        });

        $(function () {
            $('.select2').select2()
        });</script>
}