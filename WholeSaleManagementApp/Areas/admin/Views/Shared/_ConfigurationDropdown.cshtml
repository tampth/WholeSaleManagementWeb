    <a href="#forms" data-toggle="collapse" class="sidebar-link collapsed">
        <i class="align-middle" data-feather="check-circle"></i> <span class="align-middle">Quản lý hệ thống</span>
    </a>
    <ul id="forms" class="sidebar-dropdown list-unstyled collapse " data-parent="#sidebar">
        <li class="sidebar-item"><a class="sidebar-link" asp-action="Index" asp-controller="Configuration" asp-area="admin">Database</a></li>
        <li class="sidebar-item"><a class="sidebar-link" asp-action="Index" asp-controller="Role" asp-area="admin">Quan ly role</a></li>
